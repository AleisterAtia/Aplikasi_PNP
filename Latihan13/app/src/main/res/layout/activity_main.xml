<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="100dp"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPnp"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:scaleType="center"

            app:srcCompat="@drawable/pnprb" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Selamat Datang Di Politeknik Negeri Padang"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kampus Limau Manis"
        android:id="@+id/tvKlm"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Manajemen Komputer"
        android:id="@+id/btnMi"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#FF5722"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnTekkom"
        android:text="Teknik Komputer"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#FF5722"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Galeri Foto"
        android:id="@+id/btnGaleri"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#FF5722"/>

</LinearLayout>