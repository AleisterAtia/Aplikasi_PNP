<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manajemenInformatika">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Manajemen Informatika"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:background="#FF5722"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Deskripsi dan Prodi"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Program Studi Manajemen Informatika adalah bidang pendidikan yang menggabungkan ilmu teknologi informasi dengan prinsip-prinsip manajemen. Prodi ini bertujuan untuk menghasilkan lulusan yang mampu merancang, mengelola, dan memelihara sistem informasi serta teknologi yang mendukung operasional bisnis."
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="140dp"
            android:text="Back"
            android:id="@+id/btnKembali"
            android:backgroundTint="#FF5722"/>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>